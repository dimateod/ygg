#!/bin/bash

THIS_DIR=$(dirname "$(readlink -f "$0")")
CONF_REPOS="$THIS_DIR/repos"

function main {
  echo Running from $THIS_DIR
  cmd=$1
  if [ -z "$cmd" ]; then
    echo -e "No command given! Try running\n\$ $0 help"
    exit 1
  fi
  shift 1

  case $cmd in
    "help")
      help $@
      ;;

    *)
      echo "Command not recognized! Try running\n\$ $0 help"
      ;;
  esac
}

function help {
  echo Help: $@
}

main $@
